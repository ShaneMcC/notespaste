{% extends 'base.html.twig' %}

{% block title %}404 Not Found - Pastebin{% endblock %}

{% block content %}
<header>
    <h1>404 - Not Found</h1>
</header>

<p class="not-found-message">The page you're looking for doesn't exist.</p>

{% if showLoginLink %}
    {% if isLoggedIn %}
        <p><a href="{{ basePath }}/" class="button">Go to Home</a></p>
    {% else %}
        <p><a href="{{ basePath }}/login" class="button">Login</a></p>
    {% endif %}
{% endif %}
{% endblock %}
