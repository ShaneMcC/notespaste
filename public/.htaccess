RewriteEngine On

# Disable directory indexes globally
Options -Indexes

# Prevent access to _meta.json files
RewriteRule ^notes/.*/_meta\.json$ - [F,L]

# Security: Force potentially executable files in notes/ through PHP proxy
# This prevents direct execution while allowing safe serving via index.php
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^notes/([^/]+)/files/(.+)\.(ph(p[3457]?|t|tml)|cgi|pl|py|rb|rhtml|shtml|shtm|sh|bash|asp|aspx)$ index.php [L]

# Allow direct access to other (safe) files in notes/*/files/ directories
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} ^.*/notes/[^/]+/files/
RewriteRule ^ - [L]

# Allow access to rendered HTML files
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.html$
RewriteRule ^ - [L]

# Allow access to static assets (css, js, images in public folders)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(static|assets|public)/ - [L]

# Route everything else through index.php (including directory access attempts)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [QSA,L]
